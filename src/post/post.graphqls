type Post {
  id: ID!
  title: String!
  content: String!
  author: User!
  createdAt: String
  updatedAt: String
}

extend type Query {
  post(id: ID!): Post
  posts: [Post!]
}

extend type Mutation {
  createPost(title: String!, content: String!, authorID: ID!): Post!
  updatePost(id: ID!, title: String, content: String): Post!
  deletePost(id: ID!): Post!
}